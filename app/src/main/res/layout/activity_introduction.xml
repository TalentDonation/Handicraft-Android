<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.landvibe.handicraft.introduction.IntroductionActivity">

    <TextView
        android:id="@+id/tv_workshop_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="workshop introdution"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_workshop_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_workshop_intro"/>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grayLight2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_workshop_content" />

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about class"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_class_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_class"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grayLight2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_class_content" />

    <TextView
        android:id="@+id/tv_directions_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="directions"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_directions_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_directions_intro"/>



</android.support.constraint.ConstraintLayout>
